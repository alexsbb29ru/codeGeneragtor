{
  "name": "barcodegen",
  "version": "1.4.9",
  "description": "App for generating barcode",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "generate": "electron-builder"
  },
  "author": "Sbb Company",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.8.0"
  },
  "dependencies": {
    "@electron/remote": "^1.0.2",
    "bootstrap": "^4.5.2",
    "bwip-js": "^2.0.10",
    "fs-jetpack": "^3.1.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "build": {
    "appId": "com.barcodegen.app",
    "productName": "Barcode generator",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
